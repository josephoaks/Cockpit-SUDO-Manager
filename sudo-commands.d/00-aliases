# Managed by Cockpit Sudo Manager
# DO NOT EDIT BY HAND
#
# This file defines global sudo policy objects (aliases).
# User and group assignments reference these aliases.
# Aliases are evaluated before any per-user or per-group rules.

#
# RunAs aliases
#
Runas_Alias ROOT = root
Runas_Alias SERVICES = root, wwwrun

#
# Command aliases – system management
#
Cmnd_Alias SYSTEMCTL_BASIC = \
  /usr/bin/systemctl status *, \
  /usr/bin/systemctl restart *, \
  /usr/bin/systemctl reload *, \
  /usr/bin/systemctl start *, \
  /usr/bin/systemctl stop *

Cmnd_Alias JOURNALCTL_READ = \
  /usr/bin/journalctl, \
  /usr/bin/journalctl -xe

#
# Command aliases – web
#
Cmnd_Alias NGINX_CMDS = \
  /usr/bin/systemctl reload nginx, \
  /usr/bin/systemctl restart nginx, \
  /usr/sbin/nginx -t

#
# Command aliases – packages
#
Cmnd_Alias ZYPPER_READONLY = \
  /usr/bin/zypper search *, \
  /usr/bin/zypper info *

Cmnd_Alias ZYPPER_ADMIN = \
  /usr/bin/zypper install *, \
  /usr/bin/zypper remove *, \
  /usr/bin/zypper patch
